@{
    ViewBag.Title = "reservas";
}

<div id="reservar">
    <divstyle>
        <h3 style="color: white; text-shadow: 0.1em 0.1em 0.2em black;text-align:center; font-size:2em;">Faça uma reserva</h3>
        <p style="color: white; text-shadow: 0.1em 0.1em 0.2em black">Nossos quartos são equipados com tudo que você precisa para se sentir em casa.</p>
    </divstyle>

    <div class="formulario">
        <form style="text-align:center;align-items:center" method="post" action="@Url.Action("novareserva")">
            <h2 style="font-size:1em;font-weight:bold">Escolha a data da sua reserva</h2>
            <label> Check-in:</label>
            <input type="date" name="entrada">
            <br>
            <label> Check-out:</label>
            <input type="date" name="saida">
            <h2 style="font-size:1em;font-weight:bold">Escolha seu quarto</h2>
            <input type="radio" name="radio" value="STANDART" />
            <label>Standart</label>
            <input type="radio" name="radio" value="MASTER" />
            <label>Master</label>
            <input type="radio" name="radio" value="DELUXE" />
            <label>Deluxe</label>
            <h2 style="font-size:1em;font-weight:bold">Informe o seu CPF</h2>
            <!--Selecionar um CPF-->
            <input style="border:solid;text-align:center" type="text" name="cpf" placeholder="" />
            <br />
            <input type="submit" value="Reservar">
        </form>
    </div>
</div>

<div id="quartos">
    <h1>Nossos quartos e suites</h1>
    <br />

    <br>
